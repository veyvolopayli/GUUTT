<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        android:background="@drawable/lesson_card_background"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lesson_name"
            android:fontFamily="@font/dm_sans_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/program_engenering"
            android:textSize="18sp"
            android:layout_marginEnd="50dp"/>

        <TextView
            android:id="@+id/classroom"
            android:fontFamily="@font/dm_sans_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/classroom_example"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/professor_name"
            android:fontFamily="@font/dm_sans_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/edward_snowden"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/time"
            android:fontFamily="@font/dm_sans_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blue_1"
            android:text="@string/time_template"
            android:textSize="18sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/lesson_type"
        android:fontFamily="@font/dm_sans_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="@string/lz"
        android:background="@drawable/lesson_type_card"
        android:paddingHorizontal="8dp"
        android:paddingVertical="6dp"
        android:textSize="18sp"
        android:layout_marginVertical="4dp"
        android:layout_marginHorizontal="12dp"
        android:minEms="3"
        android:gravity="center"
        android:elevation="8dp"
        android:layout_gravity="end|top"/>

</FrameLayout>