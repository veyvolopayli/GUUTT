<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GUUTT" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">#eef0f6</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.GUUTT" parent="Base.Theme.GUUTT" />

    <style name="BaseButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/apple_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="PoppinsFontThemeSemiBold" parent="TextAppearance.AppCompat.Body2">
        <item name="fontFamily">@font/poppins_semi_bold</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
    </style>

    <style name="PoppinsFontThemeMedium" parent="TextAppearance.AppCompat.Body2">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="PoppinsFontThemeRegular" parent="TextAppearance.AppCompat.Body2">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:gravity">center</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="hintTextAppearance">@style/PoppinsFontThemeRegular</item>
        <item name="boxStrokeColor">@color/apple_blue</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="hintEnabled">false</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxStrokeErrorColor">@color/apple_blue</item>
        <item name="errorTextAppearance">@font/poppins_regular</item>
        <item name="errorIconTint">@color/apple_blue</item>
        <item name="errorTextColor">@color/apple_blue</item>
    </style>

    <style name="TextInputEdittext" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:paddingHorizontal">18dp</item>
        <item name="android:paddingVertical">14dp</item>
        <item name="android:textColorHint">@color/apple_grey</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHighlight">#33051367</item>
    </style>

</resources>